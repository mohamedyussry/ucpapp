# Standard Flutter Podfile for iOS 15.0 - Updated Feb 1
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronous priority.
# Disable this for faster pod installs.
install! 'cocoapods', :deterministic_uuids => false

# This file is generated by Flutter and should not be edited.
# It tells CocoaPods where to find Flutter's plugins.
require_relative '../Flutter/podhelper'

project 'Runner', {
  'Debug' => :debug,
  'Release' => :release,
  'Profile' => :profile,
}

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Force 15.0 for all pods to resolve firebase_auth and other conflicts
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end
