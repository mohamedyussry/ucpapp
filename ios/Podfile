# Podfile fixed for Codemagic (No dependency on Generated.xcconfig)
platform :ios, '15.0'

# Setup installation options
install! 'cocoapods', :deterministic_uuids => false

# Define the project structure
project 'Runner', {
  'Debug' => :debug,
  'Release' => :release,
  'Profile' => :profile,
}

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # IMPORTANT: Since we cannot rely on the generated files from Windows,
  # we rely on Codemagic's automatic script injection for the plugins.
  # Codemagic runs `flutter build ios` which generates the necessary podhelper 
  # BEFORE this pod install runs.
  
  # Try to load the standard podhelper if it exists (it should on Codemagic)
  podhelper_path = File.join(File.dirname(__FILE__), '..', 'Flutter', 'podhelper.rb')
  
  if File.exist?(podhelper_path)
    load podhelper_path
    flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
  else
    # Fallback if podhelper is missing (should not happen on properly configured CI)
    puts "Warning: podhelper.rb not found. Plugins might not work."
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
